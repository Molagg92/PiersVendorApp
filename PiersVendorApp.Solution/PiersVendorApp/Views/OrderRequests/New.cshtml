@{
  Layout = "_Layout";
}

<h1>Add a new item to @Model.AccountName</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="Id" name="Id" type="hidden" value="@Model.Id">
  <label for="orderItem">Order Item</label>
  <input id="orderItem" name="orderItem" type="text">
  <button type='submit'>Add Item</button>
</form>